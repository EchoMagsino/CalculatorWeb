@model Multiplication
@{
    ViewData["Title"] = "Multiplication";
}
<h1>Multiplication</h1>

<form method="post">
    <div>
        <label class="form-label" asp-for="FirstNumber">FirstNumber</label>
        <input class="form-control" asp-for="FirstNumber" />
    </div>
    <div>
        <label class="form-label" asp-for="SecondNumber">SecondNumber</label>
        <input class="form-control" asp-for="SecondNumber" />
    </div>
    <div>
        <label class="form-label" asp-for="Result">Result</label>
        <input asp-for="Result" class="form-control" readonly />
    </div>
    <div>
        <button class="btn btn-dark" type="submit">Calculate</button>
    </div>
    <div>
        <a class="btn btn-secondary" asp-controller="Multiplication" asp-action="Index">Clear</a>
    </div>

</form>
